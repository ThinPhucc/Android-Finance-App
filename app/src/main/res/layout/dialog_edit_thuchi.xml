<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/botron_dialog_thuchi"
    android:orientation="vertical">

    <TextView
        android:id="@+id/thuchi_edit_txt_loaitien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/botron_2ben_top_dialog_thuchi"
        android:gravity="center"
        android:text="Thu - Chi"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/thuchi_edit_txt_tien"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/line_text"
                    android:drawableLeft="@drawable/ic_money"
                    android:drawableTint="#0B9BEA"
                    android:gravity="right"
                    android:inputType="number"
                    android:padding="0dp"
                    android:text="0"
                    android:textColor="#0B9BEA"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Vnđ"
                    android:inputType="number"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="400dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Chọn Loại Tiền"
                    android:textColor="#0883E2"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/edit_spinner_loaitien"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <TextView
                android:id="@+id/thuchi_edit_txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_calender"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="23dp"
                android:textColor="#0883E2"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="400dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Chọn Hạng Mục"
                    android:textColor="#0883E2"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/edit_spinner_hangmuc"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <EditText
                android:id="@+id/thuchi_edit_txt_ghichu"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/botron_textview"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Ghi chú"
                android:inputType="textMultiLine|textPersonName"
                android:paddingLeft="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/thuchi_edit_btn_huy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:alpha="0.9"
                    android:backgroundTint="#8E8686"
                    android:text="Huỷ"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:cornerRadius="7dp" />

                <Button
                    android:id="@+id/thuchi_edit_btn_luu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:alpha="0.9"
                    android:backgroundTint="#EC4F4F"
                    android:text="Lưu"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:cornerRadius="7dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>